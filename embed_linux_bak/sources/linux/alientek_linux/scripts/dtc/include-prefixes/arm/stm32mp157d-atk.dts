/dts-v1/;

#include "stm32mp157.dtsi"
#include "stm32mp15xd.dtsi"
#include "stm32mp15-pinctrl.dtsi"
#include "stm32mp15xxaa-pinctrl.dtsi"
#include "stm32mp157d-atk.dtsi"
#include <dt-bindings/rtc/rtc-stm32.h>
#include <dt-bindings/input/input.h>

/ {
	model = "STMicroelectronics STM32MP157C-DK2 Discovery Board";
	compatible = "st,stm32mp157d-atk", "st,stm32mp157";

	aliases {
		ethernet0 = &ethernet0;
		serial0 = &uart4;
		serial1 = &usart3;
		serial2 = &uart5;
		serial3 = &uart7;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	reserved-memory {

		gpu_reserved: gpu@f6000000 {
			reg = <0xf6000000 0x8000000>;
			no-map;
		};

        optee_memory: optee@fe000000 {
			reg = <0xfe000000 0x2000000>;
			no-map;
        };
	};

    panel_rgb: panel-rgb {
        compatible = "alientek,lcd-rgb";
        backlight = <&panel_backlight>;
        status = "okay";

		port {
			dsi_panel_in: endpoint {
				remote-endpoint = <&ltdc_ep1_out>;
			};
		};
	};
    
    stm32mp1_led{
        compatible = "atkstm32mp1-led";
        status = "okay";
        reg = <0x50000A28 0x04    /* RCC_MP_AHB4ENSETR */ 
               0x5000A000 0x04    /* GPIOI_MODER */ 
               0x5000A004 0x04    /* GPIOI_OTYPER */ 
               0x5000A008 0x04    /* GPIOI_OSPEEDR */ 
               0x5000A00C 0x04    /* GPIOI_PUPDR */ 
               0x5000A018 0x04 >; /* GPIOI_BSRR */
    };
  
    gpio_led{
        compatible = "atk,led";
        pinctrl-names = "default";
        pinctrl-0 = <&led_pins_a>;
        led_gpio = <&gpioi 0 GPIO_ACTIVE_LOW>;
        status ="okay";
    };
    beep{
        compatible = "atk,beep";
        status ="okay";
        pinctrl-names = "default";
        pinctrl-0 = <&beep_pins_a>;
        beep-gpio = <&gpioc 7 GPIO_ACTIVE_HIGH>;
    };
/*
    key{
        compatible = "atk,key";
        status ="okay";
        pinctrl-names = "default";
        pinctrl-0 = <&key_pins_a>;
        key-gpio = <&gpiog 3 GPIO_ACTIVE_LOW>;
        interrupt-parent = <&gpiog>;
        interrupts = <3 IRQ_TYPE_EDGE_BOTH>;
    };
    */
    gpio-keys {
            compatible = "gpio-keys";
            pinctrl-names = "default";
            pinctrl-0 = <&key_pins_a>;
            autorepeat;

            key0 {
                label = "GPIO Key L";
                linux,code = <KEY_L>;
                gpios = <&gpiog 3 GPIO_ACTIVE_LOW>;
            };
            
            key1 {
                label = "GPIO Key S";
                linux,code = <KEY_S>;
                gpios = <&gpioh 7 GPIO_ACTIVE_LOW>;
            };

            key2 {
                label = "GPIO Key Enter";
                linux,code = <KEY_ENTER>;
                gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
                gpio-key,wakeup;
            };
    };

    
    dtsleds{
        compatible = "gpio-leds";
        pinctrl-0 = <&led_pins_a>;

        led0{
            label = "red";
            gpios = <&gpioi 0 GPIO_ACTIVE_LOW>;
            default-state = "on";
            linux,default-trigger = "heartbeat";
        };

        led1{
            label = "green";
            gpios = <&gpiof 3 GPIO_ACTIVE_LOW>;
            default-state = "off";
        };
    };    
};
&sound {
    dais = <&sai2a_port &sai2b_port &spdifrx_port>;
};
&hdmi {
    status = "disabled";
};

&i2c2 {

    ft5x06: ft5x06@38 {
        compatible = "edt,edt-ft5206";
        reg = <0x38>;
        irq-gpios = <&gpioi 1 GPIO_ACTIVE_HIGH>;
        reset-gpios = <&gpioh 15 GPIO_ACTIVE_LOW>;
        status = "okay";
    };

    gt9147: gt9147@14 {
        compatible = "goodix,gt9147","goodix,gt1151";
        reg = <0x14>;
        interrupt-parent = <&gpioi>;
        interrupts = <1 IRQ_TYPE_EDGE_RISING>;
        irq-gpios = <&gpioi 1 GPIO_ACTIVE_HIGH>;
        reset-gpios = <&gpioh 15 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };
};

&ltdc {
    port {
        #address-cells = <1>;
        #size-cells = <0>;

        ltdc_ep1_out: endpoint@1 {
            reg = <1>;
            remote-endpoint = <&dsi_panel_in>;
        };
    };
};

&optee_memory {
     status = "okay";
};
&optee {
    status = "okay";
};
&rtc {
    status = "okay";
};
